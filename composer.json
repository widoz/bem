{
  "name": "widoz/bem",
  "description": "Bem convention as class",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Guido Scialfa",
      "email": "dev@guidoscialfa.com"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "homepage": "https://github.com/widoz/bem",
