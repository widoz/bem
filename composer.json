{
    "name": "widoz/bem",
    "description": "Bem convention as class",
    "type": "library",
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "Guido Scialfa",
            "email": "dev@guidoscialfa.com"
        }
    ],
    "minimum-stability": "dev",
    "homepage": "https://github.com/widoz/bem",
    "support": {
        "issues": "https://github.com/widoz/bem/issues"
    },
    "autoload": {
        "classmap": [
            "src/"
        ],
        "psr-4": {
            "Widoz\\Bem\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Widoz\\Bem\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1",
        "widoz/hooks-interfaces": "^0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "brain/monkey": "^2.0",
        "inpsyde/php-coding-standards": "^0.13",
        "widoz/project-tests-helper": "dev-phpunit-7"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-develop": "1.0.x-dev"
        }
    },
    "config": {
        "platform": {
            "php": "7.1"
        }
    }
}
